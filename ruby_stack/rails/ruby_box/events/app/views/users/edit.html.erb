<div class="row">
    <div class="col-1"></div>
    <!-- Register Form -->
    <div class="col-5">
        <h2>Edit Your Profile</h2>
        <form action="/users/<%= @user.id %>" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            <input type="hidden" name="_method" value="patch">

            <div class="form-group">
                <label for="first_name">First Name:</label>
                <input type="text" name="user[first_name]" id="first_name" value="<%= @user.first_name.titleize %>" class="form-control" />
            </div>

            <div class="form-group">
                <label for="last_name">Last Name:</label>
                <input type="text" name="user[last_name]" id="last_name" value="<%= @user.last_name.titleize %>" class="form-control" />
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="user[email]" id="email" value="<%= @user.email %>" class="form-control" />
            </div>

            <div class="form-group">
                <label for="city">Location:</label>
                <input type="text" name="location[city]" id="city" value="<%= @user.location.city %>" class="form-control" />
                <input type="text" name="location[state]" id="state" value="<%= @user.location.state %>" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
    <!-- End Registration Form -->
</div>