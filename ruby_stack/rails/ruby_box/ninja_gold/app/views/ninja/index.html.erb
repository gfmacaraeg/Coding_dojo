
<body>

	<div id="header">
		<p id="currgold">Your Gold:<input id="goldout" type="textbox" name="currgold" value=<%= session[:gold] %>></p>
	</div>
	<div class="main">
		<p class="type">Farm</p>
		<p class="earn">(earns 10 - 20 golds)</p>
		<form action="/new" method="post">
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

		  <input type="hidden" name="building" value="farm" />
		  <input class="sub" type="submit" value="Find Gold!"/>
		</form>

	</div>
	<div class="main">
		<p class="type">Cave</p>
		<p class="earn">(earns 5 - 10 golds)</p>
		<form action="/new" method="post">
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

		  <input type="hidden" name="building" value="cave" />
		  <input class="sub" type="submit" value="Find Gold!"/>
		</form>		
	</div>
	<div class="main">
		<p class="type">House</p>
		<p class="earn">(earns 2 - 5 golds)</p>
		<form action="/new" method="post">
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

		  <input type="hidden" name="building" value="house" />
		  <input class="sub" type="submit" value="Find Gold!"/>
		</form>		
	</div>
	<div class="main">
		<p class="type">Casino</p>
		<p class="earn">(earns/takes 0 - 50 golds)</p>
		<form action="/new" method="post">
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

		  <input type="hidden" name="building" value="casino" />
		  <input class="sub" type="submit" value="Find Gold!"/>
		</form>		
	</div>
	<p>Activities:</p>
	<div id="textarea">
		<% session[:activities].reverse.each do |element| %>​
				<% if element.include?("Earned") %>​
					<p id="green"><%= element %></p>​
				<% else %>​
					<p id="red"><%= element %></p>​
				<% end %>​
		<% end %>​
	</div>
<!-- 	</textarea> -->
</body>
