<div class="row">
<div class="col-1"></div>
	<div class="col-10">
		<% if flash[:errors] %>
			<% flash[:errors].each do |message| %>
			<p style="color:red"><%= message %></p>
			<% end %>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-1"></div>
	<!-- Register Form -->
	<div class="col-5">
		<h2>Register</h2>
		<form action="/users" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

			<div class="form-group">
				<label for="first_name">First Name:</label>
				<input type="text" name="user[first_name]" id="first_name" class="form-control" />
					
			</div>

			<div class="form-group">
				<label for="last_name">Last Name:</label>
				<input type="text" name="user[last_name]" id="last_name" class="form-control" />
			</div>

			<div class="form-group">
				<label for="email">Email:</label>
				<input type="email" name="user[email]" id="email" class="form-control" />
			</div>

			<div class="form-group">
				<label for="password">Password:</label>
				<input type="password" name="user[password]" id="password" class="form-control" />
			</div>

			<div class="form-group">
				<label for="password_confirmation">Password Confirmation:</label>
				<input type="password" name="user[password_confirmation]" id="password_confirmation" class="form-control" />
			</div>

			<button type="submit" class="btn btn-primary">Register</button>
		</form>
	</div>
	<!-- End Registration Form -->
	<!-- Login Form -->
	<div class="col-5">
		<h2>Login</h2>
		<form action="/login" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

			<div class="form-group">
				<label for="email">Email:</label>
				<input type="email" name="email" id="email" class="form-control" />
			</div>

			<div class="form-group">
				<label for="password">Password:</label>
				<input type="password" name="password" id="password" class="form-control" />
			</div>

			<button type="submit" class="btn btn-primary">Login</button>
		</form>
	</div>
	<!-- End Login Form -->
	<div class="col-1"></div>
</div>